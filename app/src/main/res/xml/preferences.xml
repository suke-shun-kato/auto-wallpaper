<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/xyz.monogatari.autowallpaper">
    <PreferenceCategory
        android:key="from"
        android:title="@string/setting_from">
        <SwitchPreference
            android:defaultValue="true"
            android:key="from_dir"
            android:summary="@string/setting_form_dir_onoff_summary"
            android:title="@string/setting_from_dir_onoff_title" />
        <xyz.monogatari.autowallpaper.SelectDirPreference
            android:defaultValue="PICTURES"
            android:key="from_dir_path"
            android:title="@string/setting_form_dir_which_title"
            custom:dialogTitle="@string/select_dir_pref_dialog_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="from_twitter_fav"
            android:title="@string/setting_form_twitter_fav_title" />
        <xyz.monogatari.autowallpaper.TwitterOAuthPreference
            android:key="from_twitter_oauth"
            android:title="@string/setting_from_twitter_oauth"
            custom:textCantAccessAuthPage="@string/setting_from_twitter_oauth_text_cantAccessAuthPage"
            custom:textOauthSuccess="@string/setting_from_twitter_oauth_text_oauthSuccess"
            custom:textOauthFailed="@string/setting_from_twitter_oauth_text_oauthFailed" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="when"
        android:title="@string/setting_when">
        <SwitchPreference
            android:key="when_turnOn"
            android:defaultValue="true"
            android:title="@string/setting_when_turnOn_title"
            android:summary="@string/setting_when_turnOn_summary" />
        <SwitchPreference
            android:key="when_timer"
            android:defaultValue="false"
            android:title="@string/setting_when_timer_title"
            android:summary="@string/setting_when_timer_summary" />
        <!-- long型の値が格納される, サービス開始された時に_1から計算されて書き込まれる（もしくは実行中に_1が変化したとき） -->
        <Preference
            android:key="when_timer_startTiming_0"
            android:title="@string/setting_when_timer_startTime_title"
            android:defaultValue="0"
            android:summary="%s"
            android:enabled="false"
            />
        <!-- valueは0.0～1.0 倍率 -->
        <ListPreference
            android:key="when_timer_startTiming_1"
            android:entries="@array/setting_when_timer_starTiming_1_entries"
            android:entryValues="@array/setting_when_timer_starTiming_1_values"
            android:defaultValue="0.0"
            android:title="@string/setting_when_timer_starTiming_1_title"
            android:summary="%s"
            />
        <ListPreference
            android:key="when_timer_interval"
            android:entries="@array/setting_when_timer_interval_entries"
            android:entryValues="@array/setting_when_timer_interval_values"
            android:defaultValue="@string/setting_when_timer_interval_values_default"
            android:title="@string/setting_when_timer_interval_title"
            android:summary="%s"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="other"
        android:title="@string/setting_other_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="other_autoRotation"
            android:title="@string/setting_other_autoRotation_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="reset"
        android:title="@string/setting_reset_title">
        <xyz.monogatari.autowallpaper.ResetBtnPreference
            android:key="other_resetBtn"
            android:title="@string/setting_reset_resetBtn_title"
            custom:textDialogMsg="@string/setting_reset_resetBtn_dialogText"
            custom:textResult="@string/setting_reset_resetBtn_resultText"
            />
    </PreferenceCategory>

</PreferenceScreen>