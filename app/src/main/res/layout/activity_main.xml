
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"

        tools:context="xyz.monogatari.suke.autowallpaper.MainActivity">
        <!-- scaleType はsrcの画像も拡大する-->
        <ImageButton
            android:contentDescription="@string/main_power"
            android:id="@+id/main_onOff_service"
            android:layout_width="@dimen/main_activity_power_btn_size"
            android:layout_height="@dimen/main_activity_power_btn_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_power"
            android:onClick="onOffService_onClick"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_power_onoff_24dp" />
    </RelativeLayout>
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <Button
            style="?android:attr/buttonBarStyle"
            android:id="@+id/set_wallpaper"
            android:layout_width="@dimen/main_activity_btn_usual_width"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:onClick="setWallpaper_onClick"
            android:text="@string/main_set_wallpaper"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_usual"
            />
        <Button
            style="?android:attr/buttonBarStyle"
            android:id="@+id/main_to_setting"
            android:layout_width="@dimen/main_activity_btn_usual_width"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/main_activity_btn_usual_margin"
            android:layout_marginStart="@dimen/main_activity_btn_usual_margin"

            android:onClick="toSetting_onClick"
            android:text="@string/main_to_setting"
            android:textColor="@color/colorText"
            android:background="@drawable/btn_usual"
                />


    </LinearLayout>
</LinearLayout>
