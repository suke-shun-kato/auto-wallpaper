<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ベースのテーマ -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 基本色の設定 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- メインアクティビティのテーマ、ベーステーマの色が半透明になっている -->
    <style name="mainActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 基本色の設定、半透明、windowActionBarOverlayの属性も試したけど何故か効かなかった、背景を全部透明にしているせい？ -->
        <item name="colorPrimary">@color/colorPrimaryTranslucent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTranslucent</item>
        <item name="colorAccent">@color/colorAccentTranslucent</item>

        <!--========== 背景の設定 ==========-->
        <!-- windowの背景の設定、プログラムで動的に設定しているが、ひとまずデフォルト値みたいな感じでここで設定しとく、transparent:透明な -->
        <item name="android:windowBackground">@color/translucentDark</item> <!--<item name="android:windowBackground">@color/translucentLight</item>-->
        <!--  caching rendered views が使われるときの背景色のヒント、背景色が透明のときはnullにしないといけない -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- windowに壁紙を表示させるか、壁紙はwindowの背景の後ろに表示される -->
        <item name="android:windowShowWallpaper">true</item>
        <!-- 上と下のバーを半透明にする、APIレベル19以上で設定、translucent:半透明の  -->
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item><!--上-->
        <item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item><!--下-->
    </style>
</resources>
